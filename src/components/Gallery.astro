---
/**
 * Gallery.astro - Galería de proyectos con Bento Grid
 * Diseño asimétrico moderno y responsive
 */

// Datos de la galería - Fácil de editar
const sectionData = {
	tagline: "Nuestros Proyectos",
	headline: "Jardines que inspiran",
	description: "Cada proyecto es una obra de arte única. Descubre cómo transformamos espacios ordinarios en refugios extraordinarios.",
};

// Proyectos con imágenes de Unsplash
const projects = [
	{
		id: 1,
		title: "Villa Serena",
		category: "Paisajismo Integral",
		location: "Madrid",
		image: "https://images.unsplash.com/photo-1598902108854-10e335adac99?q=80&w=1200&auto=format&fit=crop",
		size: "large", // Ocupa más espacio en el grid
	},
	{
		id: 2,
		title: "Jardín Mediterráneo",
		category: "Reforma Completa",
		location: "Barcelona",
		image: "https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?q=80&w=800&auto=format&fit=crop",
		size: "small",
	},
	{
		id: 3,
		title: "Oasis Urbano",
		category: "Terraza Premium",
		location: "Valencia",
		image: "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?q=80&w=800&auto=format&fit=crop",
		size: "small",
	},
	{
		id: 4,
		title: "Casa del Bosque",
		category: "Paisajismo Natural",
		location: "Bilbao",
		image: "https://images.unsplash.com/photo-1564429238851-f8179d5976cc?q=80&w=1200&auto=format&fit=crop",
		size: "medium",
	},
	{
		id: 5,
		title: "Residencia Aurora",
		category: "Jardín Japonés",
		location: "Sevilla",
		image: "https://images.unsplash.com/photo-1551410224-699683e15636?q=80&w=800&auto=format&fit=crop",
		size: "medium",
	},
];
---

<section id="proyectos" class="py-24 lg:py-32 bg-forest-800 relative overflow-hidden">
	<!-- Decorative elements -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute top-0 left-1/4 w-96 h-96 bg-gold-400 rounded-full blur-3xl"></div>
		<div class="absolute bottom-0 right-1/4 w-64 h-64 bg-forest-400 rounded-full blur-3xl"></div>
	</div>

	<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Section Header -->
		<div class="text-center max-w-3xl mx-auto mb-16 lg:mb-20">
			<!-- Tagline -->
			<span class="inline-block text-gold-400 font-medium text-sm tracking-widest uppercase mb-4">
				{sectionData.tagline}
			</span>
			
			<!-- Headline -->
			<h2 class="font-display text-3xl sm:text-4xl lg:text-5xl font-semibold text-white mb-6">
				{sectionData.headline}
			</h2>
			
			<!-- Description -->
			<p class="text-lg text-sand-200/80 leading-relaxed">
				{sectionData.description}
			</p>
		</div>

		<!-- Bento Grid Gallery -->
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 auto-rows-[200px] lg:auto-rows-[250px]">
			{projects.map((project, index) => {
				// Definir clases de tamaño para el bento grid
				const sizeClasses = {
					large: "sm:col-span-2 sm:row-span-2",
					medium: "sm:col-span-2 lg:col-span-2 sm:row-span-1",
					small: "sm:col-span-1 sm:row-span-1",
				};
				
				return (
					<article 
						class={`group relative rounded-2xl lg:rounded-3xl overflow-hidden cursor-pointer
							${sizeClasses[project.size as keyof typeof sizeClasses]}`}
					>
						<!-- Image -->
						<img 
							src={project.image}
							alt={project.title}
							class="absolute inset-0 w-full h-full object-cover 
								transition-transform duration-700 group-hover:scale-110"
							loading="lazy"
						/>
						
						<!-- Overlay Gradient -->
						<div class="absolute inset-0 bg-gradient-to-t from-forest-950/90 via-forest-900/20 to-transparent 
							opacity-60 group-hover:opacity-80 transition-opacity duration-300">
						</div>
						
						<!-- Content -->
						<div class="absolute inset-0 p-6 lg:p-8 flex flex-col justify-end">
							<!-- Category Badge -->
							<span class="inline-flex self-start px-3 py-1 bg-gold-500/90 text-forest-900 
								text-xs font-semibold rounded-full mb-3
								transform -translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100
								transition-all duration-300">
								{project.category}
							</span>
							
							<!-- Title -->
							<h3 class="font-display text-xl lg:text-2xl font-semibold text-white mb-1
								transform group-hover:-translate-y-1 transition-transform duration-300">
								{project.title}
							</h3>
							
							<!-- Location -->
							<div class="flex items-center gap-2 text-sand-300 text-sm
								transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100
								transition-all duration-300 delay-75">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
										d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
										d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
								{project.location}
							</div>
							
							<!-- View Project Icon -->
							<div class="absolute top-6 right-6 w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm
								flex items-center justify-center border border-white/20
								transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100
								transition-all duration-300 hover:bg-white/20">
								<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
										d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
								</svg>
							</div>
						</div>
						
						<!-- Subtle border on hover -->
						<div class="absolute inset-0 border-2 border-gold-400/0 rounded-2xl lg:rounded-3xl
							group-hover:border-gold-400/30 transition-colors duration-300">
						</div>
					</article>
				);
			})}
		</div>

		<!-- CTA Button -->
		<div class="mt-12 lg:mt-16 text-center">
			<a 
				href="#contacto"
				class="inline-flex items-center gap-3 bg-transparent text-white 
					px-8 py-4 rounded-full font-semibold border-2 border-gold-400/50
					hover:bg-gold-500 hover:text-forest-900 hover:border-gold-500
					transition-all duration-300 group"
			>
				Ver todos los proyectos
				<svg 
					class="w-5 h-5 group-hover:translate-x-1 transition-transform" 
					fill="none" 
					stroke="currentColor" 
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
				</svg>
			</a>
		</div>
	</div>
</section>
