---
/**
 * Contact.astro - Sección de contacto con formulario elegante
 * Diseño minimalista con efecto glassmorphism
 */

// Datos de contacto - Fácil de editar
const sectionData = {
	tagline: "Contacto",
	headline: "Hagamos realidad tu proyecto",
	description: "Cuéntanos tu visión y te ayudaremos a crear el jardín perfecto. Responderemos en menos de 24 horas.",
};

const contactInfo = [
	{
		icon: "phone",
		label: "Teléfono",
		value: "+34 912 345 678",
		href: "tel:+34912345678",
	},
	{
		icon: "email",
		label: "Email",
		value: "hola@azentohome.com",
		href: "mailto:hola@azentohome.com",
	},
	{
		icon: "location",
		label: "Ubicación",
		value: "Madrid, España",
		href: "#",
	},
];

// Iconos SVG
const icons: Record<string, string> = {
	phone: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/>`,
	email: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>`,
	location: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>`,
};
---

<section id="contacto" class="py-24 lg:py-32 bg-sand-100 relative overflow-hidden">
	<!-- Decorative background -->
	<div class="absolute top-0 left-0 w-full h-full">
		<div class="absolute top-1/4 -left-20 w-80 h-80 bg-forest-200/30 rounded-full blur-3xl"></div>
		<div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-gold-200/40 rounded-full blur-3xl"></div>
	</div>

	<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
			<!-- Left Column - Content -->
			<div>
				<!-- Section Header -->
				<span class="inline-block text-gold-600 font-medium text-sm tracking-widest uppercase mb-4">
					{sectionData.tagline}
				</span>
				
				<h2 class="font-display text-3xl sm:text-4xl lg:text-5xl font-semibold text-forest-800 mb-6">
					{sectionData.headline}
				</h2>
				
				<p class="text-lg text-forest-600/80 leading-relaxed mb-10">
					{sectionData.description}
				</p>

				<!-- Contact Info Cards -->
				<div class="space-y-4">
					{contactInfo.map((info) => (
						<a 
							href={info.href}
							class="flex items-center gap-4 p-4 rounded-2xl bg-white/50 backdrop-blur-sm
								border border-sand-200 hover:border-gold-300 hover:bg-white
								transition-all duration-300 group"
						>
							<div class="w-12 h-12 rounded-xl bg-forest-700 flex items-center justify-center
								group-hover:bg-forest-600 transition-colors">
								<svg 
									class="w-5 h-5 text-white" 
									fill="none" 
									stroke="currentColor" 
									viewBox="0 0 24 24"
									set:html={icons[info.icon]}
								/>
							</div>
							<div>
								<span class="block text-sm text-forest-500 mb-0.5">{info.label}</span>
								<span class="font-medium text-forest-800 group-hover:text-forest-700">
									{info.value}
								</span>
							</div>
						</a>
					))}
				</div>
			</div>

			<!-- Right Column - Form -->
			<div class="bg-white/80 backdrop-blur-xl rounded-3xl p-8 lg:p-10 shadow-xl shadow-forest-900/5 border border-sand-200">
				<h3 class="font-display text-2xl font-semibold text-forest-800 mb-6">
					Solicita tu presupuesto gratuito
				</h3>

				<form class="space-y-5">
					<!-- Name Field -->
					<div>
						<label for="name" class="block text-sm font-medium text-forest-700 mb-2">
							Nombre completo
						</label>
						<input 
							type="text" 
							id="name" 
							name="name"
							placeholder="Tu nombre"
							class="w-full px-4 py-3 rounded-xl border border-sand-300 bg-white
								text-forest-800 placeholder:text-forest-400
								focus:border-forest-500 focus:ring-2 focus:ring-forest-500/20
								transition-all duration-200"
							required
						/>
					</div>

					<!-- Email Field -->
					<div>
						<label for="email" class="block text-sm font-medium text-forest-700 mb-2">
							Correo electrónico
						</label>
						<input 
							type="email" 
							id="email" 
							name="email"
							placeholder="tu@email.com"
							class="w-full px-4 py-3 rounded-xl border border-sand-300 bg-white
								text-forest-800 placeholder:text-forest-400
								focus:border-forest-500 focus:ring-2 focus:ring-forest-500/20
								transition-all duration-200"
							required
						/>
					</div>

					<!-- Phone Field -->
					<div>
						<label for="phone" class="block text-sm font-medium text-forest-700 mb-2">
							Teléfono
						</label>
						<input 
							type="tel" 
							id="phone" 
							name="phone"
							placeholder="+34 600 000 000"
							class="w-full px-4 py-3 rounded-xl border border-sand-300 bg-white
								text-forest-800 placeholder:text-forest-400
								focus:border-forest-500 focus:ring-2 focus:ring-forest-500/20
								transition-all duration-200"
						/>
					</div>

					<!-- Service Select -->
					<div>
						<label for="service" class="block text-sm font-medium text-forest-700 mb-2">
							Servicio de interés
						</label>
						<select 
							id="service" 
							name="service"
							class="w-full px-4 py-3 rounded-xl border border-sand-300 bg-white
								text-forest-800 focus:border-forest-500 focus:ring-2 focus:ring-forest-500/20
								transition-all duration-200"
						>
							<option value="">Selecciona un servicio</option>
							<option value="paisajismo">Paisajismo Exclusivo</option>
							<option value="reformas">Reformas Integrales</option>
							<option value="mantenimiento">Mantenimiento Premium</option>
							<option value="otro">Otro proyecto</option>
						</select>
					</div>

					<!-- Message Field -->
					<div>
						<label for="message" class="block text-sm font-medium text-forest-700 mb-2">
							Cuéntanos tu proyecto
						</label>
						<textarea 
							id="message" 
							name="message"
							rows="4"
							placeholder="Describe brevemente qué tienes en mente..."
							class="w-full px-4 py-3 rounded-xl border border-sand-300 bg-white
								text-forest-800 placeholder:text-forest-400 resize-none
								focus:border-forest-500 focus:ring-2 focus:ring-forest-500/20
								transition-all duration-200"
						></textarea>
					</div>

					<!-- Submit Button -->
					<button 
						type="submit"
						class="w-full flex items-center justify-center gap-2 bg-forest-700 text-white 
							px-8 py-4 rounded-xl font-semibold shadow-lg shadow-forest-700/25
							hover:bg-forest-600 hover:shadow-xl hover:shadow-forest-700/30
							active:scale-[0.98] transition-all duration-300"
					>
						Enviar solicitud
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
								d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
						</svg>
					</button>

					<!-- Privacy Note -->
					<p class="text-xs text-forest-500 text-center">
						Al enviar este formulario, aceptas nuestra 
						<a href="#" class="underline hover:text-forest-700">política de privacidad</a>.
					</p>
				</form>
			</div>
		</div>
	</div>
</section>
