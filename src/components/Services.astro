};
---

<section id="servicios" class="py-24 lg:py-32 bg-sand-50 relative overflow-hidden">
	<!-- Decorative background elements -->
	<div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-bl from-forest-50/50 to-transparent rounded-bl-full"></div>
	<div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-gradient-to-tr from-gold-100/30 to-transparent rounded-tr-full"></div>

	<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<!-- Section Header -->
		<div class="text-center max-w-3xl mx-auto mb-16 lg:mb-20">
			<!-- Tagline -->
			<span class="inline-block text-gold-600 font-medium text-sm tracking-widest uppercase mb-4">
				{sectionData.tagline}
			</span>
			
			<!-- Headline -->
			<h2 class="font-display text-3xl sm:text-4xl lg:text-5xl font-semibold text-forest-800 mb-6">
				{sectionData.headline}
			</h2>
			
			<!-- Description -->
			<p class="text-lg text-forest-600/80 leading-relaxed">
				{sectionData.description}
			</p>
		</div>

		<!-- Services Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
			{services.map((service, index) => (
				<article 
					class="group relative bg-white rounded-3xl p-8 lg:p-10 
						shadow-sm hover:shadow-xl hover:shadow-forest-900/5
						border border-sand-200 hover:border-gold-300
						transition-all duration-500 hover:-translate-y-2"
					style={`animation-delay: ${index * 0.1}s;`}
				>
					<!-- Icon Container -->
					<div class="w-16 h-16 mb-6 rounded-2xl bg-gradient-to-br from-forest-600 to-forest-700 
						flex items-center justify-center shadow-lg shadow-forest-700/20
						group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
						<svg 
							class="w-8 h-8 text-white" 
							fill="none" 
							stroke="currentColor" 
							viewBox="0 0 24 24"
							set:html={icons[service.icon]}
						/>
					</div>

					<!-- Content -->
					<h3 class="font-display text-xl lg:text-2xl font-semibold text-forest-800 mb-4 
						group-hover:text-forest-700 transition-colors">
						{service.title}
					</h3>
					
					<p class="text-forest-600/80 leading-relaxed mb-6">
						{service.description}
					</p>

					<!-- Features List -->
					<ul class="space-y-3">
						{service.features.map((feature) => (
							<li class="flex items-center gap-3 text-sm text-forest-700">
								<span class="flex-shrink-0 w-5 h-5 rounded-full bg-gold-100 flex items-center justify-center">
									<svg class="w-3 h-3 text-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
									</svg>
								</span>
								{feature}
							</li>
						))}
					</ul>

					<!-- Hover Accent Line -->
					<div class="absolute bottom-0 left-8 right-8 h-1 bg-gradient-to-r from-gold-400 to-gold-500 
						rounded-full transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left">
					</div>
				</article>
			))}
		</div>

		<!-- CTA Section -->
		<div class="mt-16 lg:mt-20 text-center">
			<p class="text-forest-600 mb-6">
				¿No encuentras lo que buscas? Cuéntanos tu proyecto.
			</p>
			<a 
				href="#contacto"
				class="inline-flex items-center gap-2 text-forest-700 font-semibold 
					hover:text-gold-600 transition-colors group"
			>
				Contactar con un especialista
				<svg 
					class="w-5 h-5 group-hover:translate-x-1 transition-transform" 
					fill="none" 
					stroke="currentColor" 
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
				</svg>
			</a>
		</div>
	</div>
</section>
