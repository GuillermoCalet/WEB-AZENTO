---
/**
 * Services.astro - Sección de servicios con grid de cards
 * Diseño elegante con iconos y efectos hover
 */

// Datos de servicios - Fácil de editar
const sectionData = {
	tagline: "Nuestros Servicios",
	headline: "Soluciones integrales para tu hogar",
	description: "Ofrecemos un servicio completo de diseño, construcción y acabados para espacios exteriores e interiores. Cada proyecto es único, como tu hogar.",
};

const services = [
	{
		id: 1,
		icon: "garden",
		title: "Jardines y Terrazas",
		description: "Diseñamos y ejecutamos jardines y terrazas que transforman tus espacios exteriores. Desde jardines verticales hasta terrazas con zonas chill-out.",
		features: ["Jardines verticales", "Césped artificial", "Zonas de relax"],
	},
	{
		id: 2,
		icon: "pergola",
		title: "Pérgolas y Celosías",
		description: "Instalación de pérgolas bioclimáticas y celosías de madera tecnológica que aportan elegancia y funcionalidad a cualquier espacio.",
		features: ["Pérgolas bioclimáticas", "Celosías de madera", "Diseño a medida"],
	},
	{
		id: 3,
		icon: "facade",
		title: "Fachadas y Revestimientos",
		description: "Renovamos fachadas con porcelánico de gran formato y revestimientos de alta calidad. Acabados que combinan estética y durabilidad.",
		features: ["Porcelánico exterior", "Madera tecnológica", "Acabados premium"],
	},
	{
		id: 4,
		icon: "interior",
		title: "Reformas Interiores",
		description: "Transformamos espacios interiores con diseño personalizado. Cocinas, salones y estancias que reflejan tu estilo de vida.",
		features: ["Diseño de cocinas", "Iluminación", "Mobiliario a medida"],
	},
];

