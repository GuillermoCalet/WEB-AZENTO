---
/**
 * Services.astro - Sección de servicios con grid de cards
 * Diseño elegante con iconos y efectos hover
 */

// Datos de servicios - Fácil de editar
const sectionData = {
	tagline: "Nuestros Servicios",
	headline: "Soluciones integrales para tu jardín",
	description: "Ofrecemos un servicio completo de diseño, construcción y mantenimiento de espacios exteriores. Cada proyecto es único, como tu hogar.",
};

const services = [
	{
		id: 1,
		icon: "palette", // Paisajismo
		title: "Paisajismo Exclusivo",
		description: "Diseñamos jardines que cuentan historias. Combinamos plantas autóctonas con especies selectas para crear paisajes únicos que evolucionan con las estaciones.",
		features: ["Diseño personalizado", "Plantas premium", "Iluminación ambiental"],
	},
	{
		id: 2,
		icon: "hammer", // Reformas
		title: "Reformas Integrales",
		description: "Transformamos espacios exteriores por completo. Desde terrazas y pérgolas hasta piscinas naturales y zonas de entretenimiento al aire libre.",
		features: ["Construcción artesanal", "Materiales nobles", "Acabados de lujo"],
	},
	{
		id: 3,
		icon: "leaf", // Mantenimiento
		title: "Mantenimiento Premium",
		description: "Tu jardín siempre perfecto. Nuestro equipo de jardineros expertos se encarga de que cada detalle luzca impecable durante todo el año.",
		features: ["Visitas programadas", "Poda especializada", "Cuidado estacional"],
	},
];

