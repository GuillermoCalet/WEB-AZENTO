---
/**
 * Hero.astro - Sección principal a pantalla completa
 * Imagen de fondo con overlay y CTAs destacados
 */

// Datos del Hero - Fácil de editar
const heroContent = {
	headline: "Transformamos espacios en experiencias únicas",
	subheadline: "Especialistas en jardines, terrazas, pérgolas, celosías de madera y fachadas con porcelánico. Diseño y ejecución de espacios exteriores e interiores que reflejan tu estilo de vida.",
	ctaPrimary: {
		label: "Solicitar Presupuesto",
		href: "#contacto",
	},
	ctaSecondary: {
		label: "Ver Proyectos",
		href: "#proyectos",
	},
	// Imágenes de fondo para slideshow
	backgroundImages: [
		"/images/jardin_2.png",
		"/images/logo_azento.jpg",
	],
	// Estadísticas destacadas
	stats: [
		{ value: "Desde", label: "2022" },
		{ value: "100%", label: "Proyectos personalizados" },
		{ value: "Madrid", label: "y alrededores" },
	],
};
---

<section 
	id="inicio"
	class="relative h-screen min-h-[700px] flex items-center justify-center overflow-hidden"
>
	<!-- Background Images Slideshow -->
	<div class="absolute inset-0 z-0">
		<!-- Contenedor de imágenes con transición -->
		<div id="hero-slideshow" class="relative w-full h-full">
			{heroContent.backgroundImages.map((img, index) => (
				<img 
					src={img}
					alt={`AZento Home Solutions - Imagen ${index + 1}`}
					class={`hero-slide absolute inset-0 w-full h-full object-cover object-center transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
					data-slide-index={index}
					loading={index === 0 ? "eager" : "lazy"}
				/>
			))}
		</div>
		<!-- Overlay oscuro con gradiente usando colores de marca -->
		<div class="absolute inset-0 bg-gradient-to-b from-azento-950/80 via-azento-900/60 to-azento-950/90"></div>
		<!-- Overlay decorativo con patrón sutil -->
		<div class="absolute inset-0 opacity-30 bg-[radial-gradient(circle_at_50%_50%,transparent_0%,rgba(67,95,105,0.4)_100%)]"></div>
	</div>

	<!-- Contenido Principal -->
	<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
		<!-- Badge superior -->
		<div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 
			rounded-full px-4 py-2 mb-8 animate-fade-in">
			<span class="w-2 h-2 bg-accent-400 rounded-full animate-pulse"></span>
			<span class="text-neutral-100 text-sm font-medium tracking-wide">
				Jardines · Terrazas · Pérgolas · Fachadas
			</span>
		</div>

		<!-- Headline Principal -->
		<h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-semibold 
			text-white leading-tight mb-6 animate-slide-up"
			style="animation-delay: 0.1s;"
		>
			{heroContent.headline.split(' ').slice(0, 3).join(' ')}
			<span class="block text-accent-300">
				{heroContent.headline.split(' ').slice(3).join(' ')}
			</span>
		</h1>

		<!-- Subtítulo -->
		<p class="max-w-2xl mx-auto text-lg sm:text-xl text-neutral-200/90 leading-relaxed mb-10 
			animate-slide-up"
			style="animation-delay: 0.2s;"
		>
			{heroContent.subheadline}
		</p>

		<!-- Botones CTA -->
		<div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16 
			animate-slide-up"
			style="animation-delay: 0.3s;"
		>
			<!-- CTA Principal -->
			<a 
				href={heroContent.ctaPrimary.href}
				class="group inline-flex items-center gap-3 bg-accent-400 text-neutral-900 
					px-8 py-4 rounded-full font-semibold text-lg shadow-2xl shadow-accent-500/30
					hover:bg-accent-300 hover:shadow-accent-400/40 hover:-translate-y-1 
					transition-all duration-300"
			>
				{heroContent.ctaPrimary.label}
				<svg 
					class="w-5 h-5 group-hover:translate-x-1 transition-transform" 
					fill="none" 
					stroke="currentColor" 
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
				</svg>
			</a>

			<!-- CTA Secundario -->
			<a 
				href={heroContent.ctaSecondary.href}
				class="group inline-flex items-center gap-3 bg-transparent text-white 
					px-8 py-4 rounded-full font-semibold text-lg border-2 border-white/30
					hover:bg-white/10 hover:border-white/50 hover:-translate-y-1 
					backdrop-blur-sm transition-all duration-300"
			>
				<svg 
					class="w-5 h-5" 
					fill="none" 
					stroke="currentColor" 
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
				</svg>
				{heroContent.ctaSecondary.label}
			</a>
		</div>

		<!-- Stats -->
		<div class="grid grid-cols-3 gap-4 sm:gap-8 max-w-2xl mx-auto animate-slide-up"
			style="animation-delay: 0.4s;"
		>
			{heroContent.stats.map((stat) => (
				<div class="text-center p-4 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/10">
					<div class="text-3xl sm:text-4xl font-display font-bold text-accent-400 mb-1">
						{stat.value}
					</div>
					<div class="text-xs sm:text-sm text-neutral-300 font-medium">
						{stat.label}
					</div>
				</div>
			))}
		</div>
	</div>

	<!-- Scroll Indicator -->
	<div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
		<a href="#servicios" class="flex flex-col items-center gap-2 text-white/60 hover:text-white transition-colors">
			<span class="text-xs tracking-widest uppercase">Scroll</span>
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
			</svg>
		</a>
	</div>

	<!-- Decorative Elements -->
	<div class="absolute top-1/4 left-10 w-64 h-64 bg-accent-400/10 rounded-full blur-3xl animate-float"></div>
	<div class="absolute bottom-1/4 right-10 w-96 h-96 bg-azento-400/10 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
</section>

<script>
	// Hero Slideshow - Intercala imágenes de fondo
	const slides = document.querySelectorAll('.hero-slide');
	let currentSlide = 0;
	const totalSlides = slides.length;
	const intervalTime = 5000; // 5 segundos entre cambios

	function nextSlide() {
		// Ocultar slide actual
		slides[currentSlide].classList.remove('opacity-100');
		slides[currentSlide].classList.add('opacity-0');
		
		// Avanzar al siguiente
		currentSlide = (currentSlide + 1) % totalSlides;
		
		// Mostrar nuevo slide
		slides[currentSlide].classList.remove('opacity-0');
		slides[currentSlide].classList.add('opacity-100');
	}

	// Iniciar slideshow
	if (totalSlides > 1) {
		setInterval(nextSlide, intervalTime);
	}
</script>
