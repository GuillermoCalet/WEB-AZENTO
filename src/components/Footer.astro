---

<footer class="bg-azento-800 text-neutral-100">
	<!-- Main Footer -->
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-12">
			<!-- Brand Column -->
			<div class="lg:col-span-2">
				<!-- Logo AZento Home Solutions -->
				<a href="#inicio" class="inline-block mb-6 group">
					<div class="bg-white/95 px-4 py-2 rounded-xl inline-block
						transition-all duration-300 group-hover:scale-[1.02] group-hover:shadow-lg">
						<img 
							src="/images/logo_azento.jpg" 
							alt="AZento Home Solutions" 
							class="h-12 w-auto object-contain"
						/>
					</div>
				</a>
				
				<p class="text-neutral-300 leading-relaxed mb-6 max-w-sm">
					{footerData.tagline}
				</p>

				<!-- Social Icons -->
				<div class="flex items-center gap-4">
					{footerData.social.map((social) => (
						<a 
							href={social.href}
							target="_blank"
							rel="noopener noreferrer"
							aria-label={social.name}
							class="w-10 h-10 rounded-full bg-azento-700 flex items-center justify-center
								hover:bg-accent-400 transition-colors duration-300 group"
						>
							<svg 
								class="w-5 h-5 fill-current text-neutral-300 group-hover:text-azento-800 transition-colors"
								viewBox="0 0 24 24"
								set:html={socialIcons[social.icon]}
							/>
						</a>
					))}
				</div>
			</div>

			<!-- Navigation Columns -->
			{footerData.navigation.map((column) => (
				<div>
					<h4 class="font-semibold text-white text-sm uppercase tracking-wider mb-4">
						{column.title}
					</h4>
					<ul class="space-y-3">
						{column.links.map((link) => (
							<li>
								<a 
									href={link.href}
									class="text-neutral-400 hover:text-accent-400 transition-colors duration-200"
								>
									{link.label}
								</a>
							</li>
						))}
					</ul>
				</div>
			))}
		</div>
	</div>

	<!-- Bottom Bar -->
	<div class="border-t border-azento-700">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
			<div class="flex flex-col sm:flex-row items-center justify-between gap-4">
				<p class="text-sm text-neutral-500">
					{footerData.copyright}
				</p>
				
				<!-- Back to top -->
				<a 
					href="#inicio"
					class="inline-flex items-center gap-2 text-sm text-neutral-400 hover:text-accent-400 transition-colors"
				>
					Volver arriba
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
					</svg>
				</a>
			</div>
		</div>
	</div>
</footer>
